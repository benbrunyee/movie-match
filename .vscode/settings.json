{
  "files.exclude": {
    "amplify/.config": true,
    "amplify/**/*-parameters.json": true,
    "amplify/**/amplify.state": true,
    "amplify/**/transform.conf.json": true,
    "amplify/#current-cloud-backend": true,
    "amplify/backend/amplify-meta.json": true,
    "amplify/backend/awscloudformation": true,
    // Hide lambda function files
    "amplify/backend/function/movieMatchLambdaFunction/src": true,
    "amplify/backend/function/movieMatchLambdaFunction/dist": true,
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "amplify\\\\backend\\\\function\\\\movieMatchLambdaFunction\\\\lib\\\\.*\\.ts",
        "isAsync": false,
        "cmd": "bash -c 'yarn build-function'"
      }
    ]
  }
}